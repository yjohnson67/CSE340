<h1><%= title %></h1>
 
<% if (flash) { %>
   <% if (flash.notice) { %>
     <ul class="notice">
       <% flash.notice.forEach(msg => { %>
         <li><%= msg %></li>
       <%  }) %>
     </ul>
   <% } %>
<% } %>
 
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
  </ul>
<% } %>
 
<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p>You're logged in</p>
<% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
 
<h3>Inventory Management</h3>
<p><a href="/inv/management">Inventory Management</a></p>
<% } %>
 
<p><a href="/account/update/<%- locals.accountData.account_id %>">
   Update Account information</a></p>
<p><a href="/account/delete-confirm/<%- locals.accountData.account_id %>">
   Delete Account </a></p>